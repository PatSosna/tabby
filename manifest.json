{
    "manifest_version": 2,
    "name": "Tabby",
    "version": "0.0.0-placeholder",
    "icons": {
        "48": "icons/logo.png",
        "96": "icons/logo_big.png"
    },

    "browser_action": {
        "default_icon": "icons/logo.png",
        "default_title": "Open tabs manager",
        "default_popup": "popups/tabby.html"
    },

    "permissions": [
        "tabs", "storage"
    ]
}
